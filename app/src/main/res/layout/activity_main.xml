1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/spacing_normal_16"
        android:paddingBottom="@dimen/spacing_normal_16"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="777"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="Рейтинг"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
        <View
            style="@style/linevert"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_code_lines"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="77777"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:textColor="@color/white"
                android:text="Написано строк кода"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
        <View
            style="@style/linevert"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="77"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:textColor="@color/white"
                android:text="Проектов"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
