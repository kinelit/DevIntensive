<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >
<android.support.design.widget.CoordinatorLayout

    android:id="@+id/main_coordinator_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        >
           <android.support.design.widget.CollapsingToolbarLayout
               android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               app:contentScrim="@color/color_primary"
               app:layout_scrollFlags="scroll|exitUntilCollapsed"              >
               
               <ImageView
                   android:id="@+id/user_photo_img"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/profile_image_size"
                   android:scaleType="centerCrop"
                   android:src="@drawable/userphoto"
                   android:fitsSystemWindows="true"/>

               <android.support.v7.widget.Toolbar

                   android:theme="@style/AppTheme.PopupOverlay"
                   android:id="@+id/toolbar"
                   android:layout_width="match_parent"
                   android:layout_height="?attr/actionBarSize"
                   android:titleTextColor="@color/white"
                   app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >



            <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/spacing_normal_16"
        android:paddingBottom="@dimen/spacing_normal_16"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="777"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="Рейтинг"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
        <View
            style="@style/vertical"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_code_lines"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="77777"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:textColor="@color/white"
                android:text="Написано строк кода"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
        <View
            style="@style/vertical"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="77"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:textColor="@color/white"
                android:text="Проектов"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:id="@+id/phone_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/call_img"
        android:layout_width="@dimen/size_small_24"
        android:layout_height="@dimen/size_small_24"
        android:src="@drawable/ic_call_black_24dp"
        android:layout_marginTop="@dimen/size_small_24"
        android:layout_marginLeft="@dimen/spacing_medium_32"
        />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/size_big_72"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_marginLeft="@dimen/spacing_medium_32"
    android:layout_marginRight="@dimen/spacing_normal_16">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Мобильный телефон"
            android:text="89277770000"
            android:enabled="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>

    <ImageView
        style="@style/icon.right"
        android:src="@drawable/ic_phone_in_talk_black_24dp"
        />


</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:id="@+id/email_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="E-mail"
                    android:text="myMail"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"/>


    </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_size"
    android:background="@color/grey_light"
    android:layout_marginLeft="@dimen/spacing_larger_72">

</View>

    <LinearLayout
        android:id="@+id/vk_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_vk_box_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/vk_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Профиль в VK"
                    android:text="vk.com/user_profile"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:id="@+id/git_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/github_box"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/git_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="Репозиторий"
                    android:text="github.com/userrep/DevIntensive"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:id="@+id/about_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/about_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="О себе"
                    android:text="@string/about"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginRight="@dimen/spacing_medium_32"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>

</LinearLayout>

</android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_anchor="@id/appbar_layout"
        app:layout_anchorGravity="bottom|right"
        android:layout_marginRight="@dimen/fab_right_space"/>


    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
